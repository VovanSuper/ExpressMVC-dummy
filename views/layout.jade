doctype html
html(lang='en')
  head
    title= title
    meta(charset='UTF-8')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css', rel='stylesheet', integrity='sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN', crossorigin='anonymous')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/css/toastr.min.css')
  body
    .container-fluid
      nav.navbar.navbar-inverse
        .container-fluid
          ul.nav.navbar-nav
            li(class=(title==='Home page'? 'active' : ''))
              a(href='/') Home
            li(class=(title==='Users page'? 'active' : ''))
              a(href='/users') Users
          ul.nav.navbar-right
            li
              if user
                a(href='/auth/logout') Logout,#{user.locals.name}
              else
                a(href='/auth/login') Log in
        
    .container-fluid
      .row
        .col-md-10.col-md-offset-1.col-xs-12
          block content
        
      footer.footer.navbar-fixed-bottom.row-fluid.navbar-inverse
        .container-fluid
          .row
            .col-md-10.col-md-offset-1.col-xs-12
              .center-block
                p.text-primary All right reserved $copy; Vovan Super <vovasuper@gmail.com>
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js')
    if toastr
      != toastr
    
    